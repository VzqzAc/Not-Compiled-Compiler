= form_for(@compiler) do |f|
  - if @compiler.errors.any?
    #error_explanation
      %h2
        = pluralize(@compiler.errors.count, "error")
        prohibited this compiler from being saved:
      %ul
        - @compiler.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :source_code
    %br/
    = f.text_area :source_code
  .actions
    = f.submit
